{% extends "layout.html.twig" %}

{% block title %}
    {{ page.get("headline|title") }}
{% endblock %}

{% block summary %}
{% if page.get("summary") is not empty %}
	{{- page.summary -}}
{% else %}
	{{- parent() -}}
{% endif %}
{% endblock %}

{% block content %}
    {{page.body|raw}}
{% endblock %}

{% block sidebar_item %}
	{% if page.get("sidebar") is not empty %}
		{{ page.sidebar|raw }} 
	{% else %}
		{{ parent() }} 
	{% endif %}
{% endblock %}